{
    "parser": "@babel/eslint-parser", 
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "indent": ["error", 4],
        "quotes": ["error", "double", { "allowTemplateLiterals": true }],
        "semi": ["error", "always"]
    }
}